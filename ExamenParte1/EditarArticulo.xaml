        </Border>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="65" Margin="296,176,0,0" VerticalAlignment="Top" Width="514"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="65" Margin="296,242,0,0" VerticalAlignment="Top" Width="514"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="65" Margin="296,307,0,0" VerticalAlignment="Top" Width="514"/>
        <Button x:Name="btnCancelar" Content="Cancelar" HorizontalAlignment="Left" Margin="264,398,0,0" VerticalAlignment="Top" Height="50" Width="125" Background="#fabd44" FontFamily="Arial" FontSize="18" Click="Button_Click"/>
        <Button x:Name="btnActualiza" Content="Actualizar" HorizontalAlignment="Left" Margin="427,398,0,0" VerticalAlignment="Top" Height="50" Width="126" Background="#fabd44" FontFamily="Arial" FontSize="18" Click="btnActualizar_Click"/>
        <TextBox x:Name="txtCodigoSKU" HorizontalAlignment="Left" Margin="315,70,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="476" FontFamily="Arial" FontSize="18" IsReadOnly="True"/>
        <TextBox x:Name="txtDescripcion" HorizontalAlignment="Left" Margin="315,132,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="476" FontFamily="Arial" FontSize="18"/>
        <TextBox x:Name="txtPrecioUnitario" HorizontalAlignment="Left" Margin="315,263,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="476" FontFamily="Arial" FontSize="18"/>
        <TextBox x:Name="txtExistencia" HorizontalAlignment="Left" Margin="315,332,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="476" FontFamily="Arial" FontSize="18" IsReadOnly="True"/>
