        <Label Content="Existencia" HorizontalAlignment="Left" Margin="107,328,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="18"/>
        <ComboBox x:Name="cbGeneraImpuesto" HorizontalAlignment="Left" Margin="493,199,0,0" VerticalAlignment="Top" Width="120" IsEditable="False" IsEnabled="True" SelectedIndex="0" 
          SelectedValuePath="Content" SelectedValue="Si">
            <ComboBoxItem Content="Si"/>
            <ComboBoxItem Content="No"/>
        </ComboBox>

    </Grid>
</Window>
