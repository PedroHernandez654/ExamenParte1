        <Label HorizontalAlignment="Left" Margin="50,76,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="18">
            <Label Content="" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Arial" FontSize="18"/>
        </Label>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="65" Margin="10,49,0,0" VerticalAlignment="Top" Width="286"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="65" Margin="296,46,0,0" VerticalAlignment="Top" Width="514"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="65" Margin="10,111,0,0" VerticalAlignment="Top" Width="286"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="65" Margin="10,176,0,0" VerticalAlignment="Top" Width="286"/>
